
@{
    ViewBag.Title = "Chỉnh sửa tác gỉả";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<p>
    <a href="@Url.Content("/TacGia/QuanLyTacGia")" class="btn btn-primary">Trở về</a>
</p>
<h2>Chỉnh sửa tác giả</h2>
<div class="container-fluid">
    <form action="@Url.Content("/TacGia/chinhSuaTG")" method="post">
        <div class="row form-group">
            <div class="col-md-1">&nbsp;</div>
            <div class="col-md-2">Mã tác giả:</div>
            <div class="col-md-2"><input type="text" name="name" value="ABC ABC" class="form-control" readonly/></div>
            <div class="col-md-2">Tên tác giả:</div>
            <div class="col-md-3"><input type="text" name="name" value="AAAAA" class="form-control" /></div>
            <div class="col-md-2">&nbsp;</div>
        </div>
        <div class="row form-group">
            <div class="col-md-1">&nbsp;</div>
            <div class="col-md-2">Ngày sinh:</div>
            <div class="col-md-2"><input type="date" name="name" value="" class="form-control" /></div>
            <div class="col-md-2">Giới tính:</div>
            <div class="col-md-3">
                <input type="radio" name="name" value="Nam" checked />Nam
                <input type="radio" name="name" value="Nữ" />Nữ
            </div>
            <div class="col-md-2">&nbsp;</div>
        </div>
        <div class="row form-group">
            <div class="col-md-1">&nbsp;</div>
            <div class="col-md-2">Quê quán:</div>
            <div class="col-md-2"><input type="text" name="name" value="Tiên giới" class="form-control" /></div>
            <div class="col-md-2">Nghệ danh:</div>
            <div class="col-md-2"><input type="text" name="name" value="Tiên tôn" class="form-control" /></div>
            <div class="col-md-3">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-1">&nbsp;</div>
            <div class="col-md-2">
                <input type="submit" value="Chỉnh sửa" class="btn btn-primary" />
            </div>
            <div class="col-md-9">&nbsp;</div>
        </div>
    </form>
</div>
