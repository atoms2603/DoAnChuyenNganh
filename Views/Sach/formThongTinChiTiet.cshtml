@model QLSachOnline.Models.sach
@{
    ViewBag.Title = "Thông tin chi tiết";
    Layout = "~/Views/_LayoutPage1.cshtml";
    IEnumerable<QLSachOnline.Models.tacgia> dsTG = ViewBag.dsTG as IEnumerable<QLSachOnline.Models.tacgia>;
    IEnumerable<QLSachOnline.Models.theloai> dsTL = ViewBag.dsTL as IEnumerable<QLSachOnline.Models.theloai>;
}

<p>
    <a href="@Url.Content("/Sach/QuanLySach")" class="btn btn-primary">Trở về</a>
</p>
<h2>Thông tin chi tiết</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"><a href="@Url.Content("/Sach/indexSach/"+Model.masach)" class="btn btn-primary">Đọc</a></div>
        <div class="col-md-1">&nbsp;</div>
        <div class="col-md-2"><a href="@Url.Content("/Sach/formChinhSua/"+Model.masach)" class="btn btn-primary">Chỉnh sửa</a></div>
        <div class="col-md-8">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Mã sách:</div>
        <div class="col-md-4">@Model.masach</div>
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Tên sách:</div>
        <div class="col-md-4">@Model.tensach</div>
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Thể loại:</div>
        @foreach (var item in dsTL)
        {
            if (Model.theloai.Contains(item))
            {
                <div class="col-md-4">@item.tentl</div>
            }
        }
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Tác giả:</div>
        @foreach (var item in dsTG)
        {
            if (Model.tacgia.Contains(item))
            {
                <div class="col-md-4">@item.tentg</div>
            }
        }
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Nhà xuất bản:</div>
        <div class="col-md-4">@Model.nhaxuatban.tennhaxuatban</div>
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Năm sản xuất:</div>
        <div class="col-md-4">@Model.namxuatban</div>
        <div class="col-md-6">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2 font-weight-bold">Giá:</div>
        <div class="col-md-4">@Model.phi</div>
        <div class="col-md-6">&nbsp;</div>
    </div>
</div>