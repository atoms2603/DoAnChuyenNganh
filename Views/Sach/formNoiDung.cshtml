@model QLSachOnline.Models.sach
@{
    QLSachOnline.Models.chuong chuong = ViewBag.sachChon as QLSachOnline.Models.chuong;
    ViewBag.Title = chuong.tenchuong;
    Layout = "~/Views/_Layout/_LayoutNoidung.cshtml";

}

<div>&nbsp;</div>
<div class="row">
    <div class="col-md-5">&nbsp;</div>
    
    <div class="col-md-2">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Chương: @chuong.tenchuong
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @foreach (var item in Model.chuongs)
                {
                    <a class="dropdown-item" href="@Url.Content("/Sach/formNoiDung/"+Model.masach+"-"+item.machuong)">@item.tenchuong</a>
                }
            </div>
        </div>
    </div>

    <div class="col-md-5">&nbsp;</div>
</div>

<div>&nbsp;</div>

<div class="row">
    <!--SHOW NỘI DUNG --->
    <div class="col-md-12" style="text-align:center">
        <pre style="font-size:20px ">@ViewBag.noiDung</pre>
    </div>
</div>

<div>&nbsp;</div>

<div class="row">
    <div class="col-md-4">&nbsp;</div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-6">
                <ul class="pagination">
                    <li class="page-item" ><a class="page-link" href="#">Tập trước</a></li>
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="pagination">
                    <li class="page-item" ><a class="page-link" href="#">Tập tiếp</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">&nbsp;</div>
</div>