
@{
    ViewBag.Title = "Quản lý nhà xuất bản";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Quản lý nhà xuất bản</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-2">
            <!-- Model thêm nhà xuất bản -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modelThem">
                Thêm nhà xuất bản
            </button>
            <form action="@Url.Content("/NhaXuatBan/themNhaXuatBan")" method="post">

                <div class="modal" id="modelThem">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h4 class="modal-title">Thêm nhà xuất bản</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>


                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-4">Mã nhà xuất bản:</div>
                                        <div class="col-md-3"><input type="text" name="name" value=""/></div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Tên nhà xuất bản:</div>
                                        <div class="col-md-3"><input type="text" name="name" value=""/></div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Địa chỉ:</div>
                                        <div class="col-md-3"><input type="text" name="name" value=""/></div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                </div>
                            </div>


                            <div class="modal-footer">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-1">&nbsp;</div>
                                        <div class="col-md-2"><button type="submit" class="btn btn-primary">Thêm</button></div>
                                        <div class="col-md-6">&nbsp;</div>
                                        <div class="col-md-2"><button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button></div>
                                        <div class="col-md-1">&nbsp;</div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="col-md-8">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <!-- Danh sách nhà xuất bản -->
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-2 font-weight-bold">Mã nhà xuất bản</div>
        <div class="col-md-3 font-weight-bold">Tên nhà xuất bản</div>
        <div class="col-md-5">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-2">NXB xxx</div>
        <div class="col-md-3">ABC-XYZ</div>
        <div class="col-md-1">

            <!-- Model xóa nhà xuất bản -->
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modelXoa">Xóa</button>
            <form action="@Url.Content("/NhaXuatBan/xoaNhaXuatBan")" method="post">

                <div class="modal" id="modelXoa">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h4 class="modal-title">Xóa nhà xuất bản</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>


                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-4">Mã nhà xuất bản:</div>
                                        <div class="col-md-3">MLA MLM!!</div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Tên nhà xuất bản:</div>
                                        <div class="col-md-3">AAASS</div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Địa chỉ:</div>
                                        <div class="col-md-3">ABC 1123</div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-1">&nbsp;</div>
                                        <div class="col-md-2"><button type="submit" class="btn btn-primary">Xóa</button></div>
                                        <div class="col-md-6">&nbsp;</div>
                                        <div class="col-md-2"><button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button></div>
                                        <div class="col-md-1">&nbsp;</div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-2">

            <!-- Model chỉnh sửa nhà xuất bản -->
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modelChinhSua">Chỉnh sửa</button>
            <form action="@Url.Content("/TheLoai/chinhSuaNhaXB")" method="post">

                <div class="modal" id="modelChinhSua">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h4 class="modal-title">Chỉnh sửa nhà xuất bản</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>


                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-4">Mã nhà xuất bản:</div>
                                        <div class="col-md-3">MLA MLM!!</div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Tên nhà xuất bản:</div>
                                        <div class="col-md-3"><input type="text" name="name" value="AAASS" /></div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">&nbsp;</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">Địa chỉ:</div>
                                        <div class="col-md-3"><input type="text" name="name" value="ABC 1123" /></div>
                                        <div class="col-md-5">&nbsp;</div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-1">&nbsp;</div>
                                        <div class="col-md-4"><button type="submit" class="btn btn-primary">Chỉnh sửa</button></div>
                                        <div class="col-md-5">&nbsp;</div>
                                        <div class="col-md-2"><button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button></div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>
</div>
