@model QLSachOnline.Models.sach
@{
    QLSachOnline.Models.chuong chuong = ViewBag.sachChon as QLSachOnline.Models.chuong;
    ViewBag.Title = chuong.tenchuong;
    Layout = "~/Views/_Layout/_LayoutNoidung.cshtml";

}


<div class="row">
    
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container text-justify">

            

            <div class="row gy-4">

                <div class="col-lg-12">
                    <div class="portfolio-info text-center">

                        <!--SO CHUONG-->
                        <div class="row">
                            <div class="col-md-5">&nbsp;</div>

                            <div class="col-md-2">
                                <nav id="navbar" class="navbar">
                                    <ul>
                                        <li class="dropdown">
                                            <a href="#"><span>Chương: @chuong.tenchuong</span> <i class="bi bi-chevron-down"></i></a>
                                            <ul>
                                                @foreach (var item in Model.chuongs)
                                                {
                                                    <li><a class="dropdown-item" href="@Url.Content("/Sach/formNoiDung/"+Model.masach+"-"+item.machuong)">@item.tenchuong</a></li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                </nav><!-- .navbar -->
                            </div>

                            <div class="col-md-5">&nbsp;</div>
                        </div>



                        <!--SHOW NỘI DUNG --->
                        <pre style="font-size:20px">@ViewBag.noiDung</pre>




                        <!--BUTTON QUA CHUONG-->
                        @if (ViewBag.oneChuong != null)
                        {
                            <!----o dau-->


                            <div class="row">
                                <div class="col-md-5">&nbsp;</div>
                                <div class="col-md-2">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <ul class="pagination">
                                                <li class="page-item"><button type="button" class="page-link" disabled>Tập tiếp</button></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">&nbsp;</div>
                            </div>
                        }
                        else
                        {
                            if (ViewBag.previousChuong == null)
                            {

                                <!----o dau-->
                                <div class="row">
                                    <div class="col-md-5">&nbsp;</div>
                                    <div class="col-md-2">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <ul class="pagination">
                                                    <li class="page-item"><a class="page-link" href="@Url.Content("/Sach/formNoiDung/"+Model.masach+"-"+ ViewBag.nextChuong as string)">Tập tiếp</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">&nbsp;</div>
                                </div>


                            }
                            else if (ViewBag.nextChuong == null)
                            {


                                <!----o cuoi-->
                                <div class="row">
                                    <div class="col-md-5">&nbsp;</div>
                                    <div class="col-md-2">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <ul class="pagination">
                                                    <li class="page-item"><a class="page-link" href="@Url.Content("/Sach/formNoiDung/"+Model.masach+"-"+ ViewBag.previousChuong as string)">Tập trước</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">&nbsp;</div>
                                </div>


                            }
                            else
                            {
                                <!----o giua-->
                                <div class="row">
                                    <div class="col-md-4">&nbsp;</div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <ul class="pagination">
                                                    <li class="page-item"><a class="page-link" href="@Url.Content("/Sach/formNoiDung/"+Model.masach+"-"+ ViewBag.previousChuong as string)">Tập trước</a></li>
                                                </ul>
                                            </div>
                                            <div class="col-md-6">
                                                <ul class="pagination">
                                                    <li class="page-item"><a class="page-link" href="@Url.Content("/Sach/formNoiDung/"+Model.masach+"-"+ ViewBag.nextChuong as string)">Tập tiếp</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">&nbsp;</div>
                                </div>
                            }
                        }


                    </div>
                </div>

            </div>
            

        </div>
    </section><!-- End Portfolio Details Section -->

</div>