
@{
    ViewBag.Title = "IndexDangNhap";
    Layout = "~/Views/_Layout/_LayoutDangNhapDangKy.cshtml";

}

<!-- ======= Portfolio Details Section ======= -->
<section id="portfolio-details" class="portfolio-details">
    <div class="container">
        <div class="row gy-4">

            <div class="col-lg-3 ">&nbsp;</div>
            <div class="col-lg-6 ">
                <div class="about section-bg text-center" style="border-radius: 30px; align-content: center;">
                    <div>&nbsp;</div>
                    <h2>Đăng nhập</h2>
                    <form action="@Url.Content("/User/DangNhap/")" id="formID" method="post">
                        <div class="row">
                            <div class="col-md-3 col-1 col-lg-3">&nbsp;</div>
                            <div class="col-md-6 col-10 col-lg-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Tài khoản" name="taikhoan">
                                </div>
                                <div>&nbsp;</div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Mật khẩu" name="matkhau">
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label" style="float: left;">
                                        <input class="form-check-input" type="checkbox"> Remember me
                                    </label>
                                </div>
                                <div>&nbsp;</div>
                                @if (ViewBag.flagMuaSach != null)
                                {
                                    <input type="text" name="masach" value="@ViewBag.flagMuaSach" hidden />
                                }
                                <input type="submit" class="btn btn-primary" id="btnLogin" value="Đăng nhập">
                                @if ((bool)ViewBag.flagCheckError == true)
                                {
                                    <div class="text-danger" id="divDanger">Bạn đã nhập sai tài khoản hoặc mật khẩu</div>
                                }
                                @if ((bool)ViewBag.flagCheckStatus == true)
                                {
                                    <div class="text-danger" id="divDanger">Tài khoản bị vô hiệu hóa</div>
                                }
                                <div>&nbsp;</div>
                                <label class="text-right float-right"><a href="@Url.Content("/Admin/AdminLogin")" class="text-decoration-none">Đăng nhập với quyền quản trị</a></label>
                                <div>&nbsp;</div>
                            </div>
                            <div class="col-md-3 col-1 col-lg-3">&nbsp;</div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 ">&nbsp;</div>

        </div>
        </div>
</section><!-- End Portfolio Details Section -->
