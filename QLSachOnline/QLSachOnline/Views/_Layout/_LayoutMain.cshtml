<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">

    <!--FONTAWSOME-->
    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" />
    <script src="~/fontawesome/js/all.min.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
    @{
        QLSachOnline.Models.QLySachOnline db = new QLSachOnline.Models.QLySachOnline();
        QLSachOnline.Models.userlogin userlogin = Session["Login"] as QLSachOnline.Models.userlogin;
        int tmpDem = 0;
    }

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <h1 class="logo"><a href="@Url.Content("/Home/Index")">AtsBooks<span>.</span></a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo"><img src="~/assets/img/logo.png" alt=""></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" href="@Url.Content("/Home/Index")">Trang chủ</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Content("/Goi/IndexGoi")">Gói Premium</a></li>
                    <li class="dropdown">
                        <a href="#"><span>Thể loại</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>

                            @foreach (var item in db.theloais)
                            {
                                <li><a href="@Url.Content("/Home/formTheLoaiFilter/"+item.maloai)">@item.tentl</a></li>
                            }



                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#"><span>Tiến độ</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>

                            <li><a href="#">Truyện đã hoàn thành</a></li>
                            <li><a href="#">Truyện chưa hoàn thành</a></li>

                        </ul>
                    </li>
                    @if ((bool)Session["isLogin"] == false)
                    {
                        <li><a class="nav-link scrollto" href="@Url.Content("/User/IndexDangNhap/")">Đăng nhập</a></li>
                        <li><a class="nav-link scrollto" href="@Url.Content("/User/IndexDangKy/")">Đăng ký</a></li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="@Url.Content("/User/ThongTinChiTietUser/"+userlogin.taikhoan)"><span>@userlogin.taikhoan</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>

                                <li><a href="@Url.Content("/User/thongTinNguoiDung/")">Thông tin</a></li>
                                <li><a href="@Url.Content("/User/sachYeuThichUser/")">Yêu thích</a></li>
                                <li><a href="#">Thiết lập tài khoản</a></li>
                                <li><a href="@Url.Content("/User/lichSuGDUser/")">Lịch sử giao dịch</a></li>
                                <li><a href="@Url.Content("/User/logout")">Đăng xuất</a></li>

                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="nav-link scrollto" href="#"><i class="fas fa-bell"></i></a>
                            <ul>
                                <li><a href="#">Thông báo 1</a></li>
                                <li><a href="#">Thông báo 2</a></li>
                            </ul>
                        </li>
                    }
                    <li><a class="nav-link scrollto" href="@Url.Content("/Home/formGopY")">Góp ý</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->


    <section id="portfolio-details" class="portfolio-details">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-12">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            <!--COMPONENT-->
                            @foreach (var item in db.saches)
                            {
                                if (tmpDem == 3) {
                                    break;
                                }

                            <div class="swiper-slide about section-bg" style="border-radius: 30px;">
                                <div class="row gy-4">
                                    <div class="col-lg-6 d-flex justify-content-center align-items-center">
                                        <div class="col-md-6 col-lg-8 mb-5 mb-lg-0">
                                            <div class="icon-box" data-aos="fade-up" data-aos-delay="400" style="padding: 40px;">
                                                <img src="~/Images/Images_SP/@item.hinhanh" class="img-fluid rounded mx-auto d-block" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="portfolio-info">
                                            <h3>Giới thiệu</h3>
                                            <ul>
                                                <li><strong>Tên truyện</strong>: @item.tensach</li>
                                                <li>
                                                    <strong>Thể loại</strong>:
                                                    @foreach (var item2 in item.theloais)
                                                    {
                                                        <span>@item2.tentl &nbsp;&nbsp;&nbsp;</span>
                                                    }
                                                </li>
                                                <li><strong>Năm</strong>: @item.namxuatban</li>
                                                <li>&nbsp;</li>
                                                <li>
                                                    @if ((bool)item.premium)
                                                    {
                                                        <a href="@Url.Content("/Goi/IndexGoi")" class="btn btn-success">Mua <strong>Premium</strong></a>
                                                    }
                                                    else
                                                    {
                                                        if (item.chuongs.ToList().Count == 0)
                                                        {
                                                            <a href="#" class="btn btn-primary disabled">Sắp có</a> <span>&nbsp; &nbsp; &nbsp; &nbsp;</span>
                                                        }
                                                        else
                                                        {
                                                            <a href="@Url.Content("/Sach/indexSach/"+item.masach)" class="btn btn-primary">Đọc</a> <span>&nbsp; &nbsp; &nbsp; &nbsp;</span>
                                                        }
                                                    }
                                                    <a href="@Url.Content("/Sach/yeuThich/"+item.masach)" class="btn btn-danger"> <i class="fas fa-heart"></i>&nbsp;Yêu thích</a>
                                                </li>
               
                                            </ul>
                                        </div>
                                        <div class="portfolio-description">
                                            <h2>Tóm tắt</h2>
                                            <p>
                                                Autem ipsum nam porro corporis rerum. Quis eos dolorem eos itaque inventore commodi labore quia quia. Exercitationem repudiandae officiis neque suscipit non officia eaque itaque enim. Voluptatem officia accusantium nesciunt est omnis tempora consectetur dignissimos. Sequi nulla at esse enim cum deserunt eius.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div><!--END COMPONENT-->
                             tmpDem++;

                            }
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->

    <main id="main">

        <!-- ======= Featured Services Section ======= -->
        <section id="featured-services" class="featured-services">
            <div class="container" data-aos="fade-up">

                <div class="row">

                    @RenderBody()

                </div>
            </div>
        </section><!-- End Featured Services Section -->


    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="container py-4">
            <div class="copyright">
                &copy; Copyright <strong><span>AtsBooks</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                ABC
            </div>
        </div>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/purecounter/purecounter.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>
</html>
