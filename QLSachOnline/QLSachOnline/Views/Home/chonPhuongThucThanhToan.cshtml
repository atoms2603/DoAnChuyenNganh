
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/_Layout/_LayoutDangNhapDangKy.cshtml";
}


<!-- Start Section -->
<section id="featured-services" class="featured-services bg-white" style="border-radius:30px;">
    <div class="container" data-aos="fade-up">

        <div class="section-title col-12">
            <h2>Thanh toán bằng QR Momo</h2>
        </div>

        <div class="row gy-4">
            <div class="col-lg-12 d-flex justify-content-center">
                <div class="col-md-6 col-12 col-lg-6 d-flex align-items-stretch mb-5 mb-lg-0 section-bg" style="padding:15px">
                    <div class="icon-box" data-aos="fade-up" data-aos-delay="400">
                        <img src="~/Images/Demo_QR.png" class="img-fluid" alt="">
                    </div>
                    <div class="col-1 col-lg-1">&nbsp;</div>
                    <div class="col-lg-6 col-6">
                        <div class="portfolio-info">
                            <h3>Hướng dẫn thanh toán</h3>
                        </div>
                        <div class="portfolio-description">
                            <p>
                                <strong>Bước 1</strong>: Mở ứng dụng Momo <br>
                                <strong>Bước 2</strong>: Nhấn vào nội dung bla bla <br>
                                <strong>Bước 3</strong>: Nhấn bla bla <br>
                                <strong>Bước 4</strong>: Xác nhận thanh toán <br>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>&nbsp;</div>

        <div class="section-title col-12">
            <h2>Thanh toán bằng thẻ</h2>
        </div>
        <div class="row" data-aos-delay="100">
            <div class="col-lg-4 col-md-4 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <a href="@Url.Content("/Goi/thanhToanGoi/"+ViewBag.idGoi)" class="text-black text-center" style="height: 100%; width: 100%;">
                    <div class="icon-box">
                        <div class="icon"><i class="fab fa-cc-visa fa-5x"></i></div>
                        <h4>Thanh toán bằng<strong>&nbsp;Visa</strong></h4>
                        <p>(Chưa liên kết)</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <a href="@Url.Content("/Goi/thanhToanGoi/"+ViewBag.idGoi)" class="text-black text-center" style="height: 100%; width: 100%;">
                    <div class="icon-box">
                        <div class="icon"><i class="fab fa-cc-paypal fa-5x"></i></div>
                        <h4>Thanh toán bằng<strong>&nbsp;PayPal</strong></h4>
                        <p>(Chưa liên kết)</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <a href="@Url.Content("/Goi/thanhToanGoi/"+ViewBag.idGoi)" class="text-black text-center" style="height: 100%; width: 100%;">
                    <div class="icon-box">
                        <div class="icon"><i class="fab fa-cc-mastercard fa-5x"></i></div>
                        <h4>Thanh toán bằng<strong>&nbsp;Mastercard</strong></h4>
                        <p>(Chưa liên kết)</p>
                    </div>
                </a>
            </div>
        </div>

    </div>
</section><!-- End Section -->